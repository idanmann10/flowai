{
  "name": "flow-ai-desktop",
  "version": "1.0.6",
  "description": "Flow AI Desktop Platform - Advanced Productivity Tracking",
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "NODE_ENV=development concurrently \"vite\" \"wait-on tcp:5173 && electron .\"",
    "build": "vite build",
    "build:electron": "tsc --project tsconfig.electron.json",
    "preview": "vite preview",
    "make": "vite build && electron-forge make",
    "make:mac": "vite build && electron-forge make --platform=darwin",
    "make:win": "vite build && electron-forge make --platform=win32",
    "package": "vite build && electron-forge package",
    "package:mac": "vite build && electron-forge package --platform=darwin",
    "package:win": "vite build && electron-forge package --platform=win32",
    "publish": "vite build && electron-forge publish",
    "publish:github": "vite build && electron-forge publish --target=@electron-forge/publisher-github",
    "dist": "vite build && electron-builder",
    "dist:mac": "vite build && electron-builder --mac",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "test": "node tracker/v3/tests/test-tracker-v3.js",
    "test-tracker": "npm run test",
    "demo": "node tracker/v3/tests/demo-v3.js",
    "track": "node tracker/v3/start-tracker.js",
    "track:30": "node tracker/v3/start-tracker.js 30",
    "track:60": "node tracker/v3/start-tracker.js 60",
    "view:data": "node tracker/v3/view-data.js"
  },
  "author": "LevelAI",
  "license": "UNLICENSED",
  "private": true,
  "build": {
    "appId": "com.flowai.desktop",
    "productName": "Flow AI",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "target": "dmg",
      "icon": "icon.icns",
      "category": "public.app-category.productivity",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "entitlements.plist",
      "entitlementsInherit": "entitlements.plist",
      "identity": "Apple Development: Idan Mann (L783NHZMX2)"
    }
  },
  "dependencies": {
    "@floating-ui/dom": "^1.7.2",
    "@mantine/core": "^8.1.0",
    "@mantine/hooks": "^8.1.0",
    "@mantine/notifications": "^8.1.0",
    "@supabase/supabase-js": "^2.50.3",
    "@tabler/icons-react": "^3.34.0",
    "canvas-confetti": "^1.9.3",
    "dotenv": "^17.0.1",
    "electron-updater": "^6.6.2",
    "openai": "^5.9.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0",
    "uuid": "^11.1.0",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.2.0",
    "@electron-forge/maker-dmg": "^7.8.1",
    "@electron-forge/maker-zip": "^7.2.0",
    "@types/canvas-confetti": "^1.9.0",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^8.2.2",
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3",
    "typescript": "^5.2.2",
    "vite": "^5.0.0"
  }
}
